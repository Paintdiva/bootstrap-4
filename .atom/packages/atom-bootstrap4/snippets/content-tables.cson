'.text.html': # Work only with HTML


  # Tables
  'Table - Bootstrap 4':
    'prefix': 'tab'
    'body': """
      <table class="table">
        <thead>
          <tr>
            <th>$1</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>$2</td>
          </tr>
        </tbody>
      </table>
    """

  'Tables (full option) - Bootstrap 4':
    'prefix': 'tabs'
    'body': """
      <table class="table table-${1:inverse|reflow|striped|bordered|hover|sm}">
        <thead>
          <tr>
            ${2:<th>#</th>}
            ${3:<th>First Name</th>}
            ${3:<th>Last Name</th>}
            ${3:<th>Username</th>}
          </tr>
        </thead>
        <tbody>
          <tr>
            ${2:<th scope="row">1</th>}
            ${3:<td>Mark</td>}
            ${3:<td>Otto</td>}
            ${3:<td>@mdo</td>}
          </tr>
          ${4:<tr>
            ${2:<th scope="row">2</th>}
            ${3:<td>Jacob</td>}
            ${3:<td>Thornton</td>}
            ${3:<td>@fat</td>}
          </tr>
          <tr>
            ${2:<th scope="row">3</th>}
            ${3:<td>Larry</td>}
            ${3:<td>the Bird</td>}
            ${3:<td>@twitter</td>}
          </tr>}
        </tbody>
      </table>
    """

  'Tables Head Inverse - Bootstrap 4':
    'prefix': 'tabhin'
    'body': """
      <table class="table">
        <thead class="thead-inverse">
          $1
        </thead>
      </table>
    """

  'Tables Responsive - Bootstrap 4':
    'prefix': 'tabr'
    'body': """
      <div class="table-responsive">
        <table class="table">
          $1
        </table>
      </div>
    """

  'Tables Colspan - Bootstrap 4':
    'prefix': 'tdcs'
    'body': """
      <td colspan="$1">
    """

  'Tables Colors (tr) - Bootstrap 4':
    'prefix': 'tabtrc'
    'body': """
      <tr class="table-${1:active|success|warning|danger|info}">$2</tr>
    """

  'Tables Colors (td) - Bootstrap 4':
    'prefix': 'tabtdc'
    'body': """
      <td class="table-${1:active|success|warning|danger|info}">$2</td>
    """
